<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Генератор случайных чисел"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <!-- Поле для ввода верхней границы -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите верхнюю границу"
        android:inputType="number"
        android:layout_marginBottom="16dp" />

    <!-- Кнопка для генерации -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сгенерировать число"
        android:layout_marginBottom="16dp" />

    <!-- Поле для вывода результата -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Результат появится здесь"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:background="#f0f0f0"
        android:textColor="#333333" />

    <!-- Поле для вывода сгенерированных данных -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сгенерированные данные:"
        android:textSize="14sp"
        android:layout_marginTop="16dp" />

</LinearLayout>